	"CartDetail": {
		"root": "div",
		"style": {},
		"children": [
			{
				"root": "h2",
				"children": "Cart Detail"
			},
			{
				"root": "table",
				"style": {
					"width": "100%"
				},
				"children": {
					"root": "tbody",
					"children": [
						{
							"root": "$for",
							"for": "i",
							"in": {
								"root": "$val",
								"val": "data"
							},
							"do": {
								"root": "CartRow",
								"item": {
									"root": "$index",
									"index": {
										"root": "$val",
										"val": "i"
									},
									"in": {
										"root": "$val",
										"val": "data"
									}
