		},
		"children": {
			"root": "ProductList",
			"products": {
				"root": "$val",
				"val": "products"
			}
		}
	},
	"ProductPage": {
		"root": "Layout",
		"items": {
			"root": "$val",
			"val": "items"
		},
		"total": {
			"root": "$val",
			"val": "total"
		},
		"categories": {
			"root": "$val",
			"val": "categories"
		},
		"children": {
			"root": "ProductDetail",
			"product": {
				"root": "$val",
				"val": "product"
			}
		}
	},
	"CartPage": {
		"root": "Layout",
		"items": {
			"root": "$val",
			"val": "items"
		},
		"total": {
			"root": "$val",
			"val": "total"
		},
		"categories": {
			"root": "$val",
			"val": "categories"
		},
		"children": {
			"root": "CartDetail",
			"data": {
				"root": "$val",
				"val": "cartData"
			},
			"items": {
				"root": "$val",
				"val": "items"
			},
			"total": {
				"root": "$val",
				"val": "total"
			}
		}
