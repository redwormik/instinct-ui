	"Layout": {
		"root": "div",
		"style": {
			"height": "100vh",
			"background": "#eef",
			"margin": -8,
			"fontFamily": "sans-serif"
		},
		"children": [
			{
				"root": "div",
				"children": [
					{
						"root": "div",
						"style": {
							"width": 200,
							"float": "right"
						},
						"children": {
							"root": "CartInfo",
							"items": {
								"root": "$val",
								"val": "items"
							},
							"total": {
								"root": "$val",
								"val": "total"
							}
						}
					},
					{
						"root": "Header"
					}
				]
			},
			{
				"root": "div",
				"style": {
					"borderBottom": "1px solid black",
					"background": "red",
					"clear": "both"
				}
			},
			{
				"root": "div",
				"style": {
					"width": 200,
					"height": "calc(100% - 82px)",
					"borderRight": "1px solid black",
					"marginRight": 8,
					"float": "left"
				},
				"children": {
					"root": "CategoryList",
					"data": {
						"root": "$val",
						"val": "categories"
					}
				}
			},
			{
				"root": "div",
				"style": {
					"margin": "8px",
					"height": "calc(100% - 98px)",
					"overflow": "auto"
				},
				"children": {
					"root": "$val",
					"val": "children"
				}
			},
			{
				"root": "div",
				"style": {
					"clear": "both"
				}
			}
		]
	},
	"Header": {
		"root": "div",
		"style": {
			"background": "#ffe",
			"padding": 8
		},
		"children": {
			"root": "h1",
			"children": "Instinct e-shop"
		}
	},
	"CartInfo": {
		"root": "div",
		"style": {},
		"children": [
			{
				"root": "h3",
				"style": {
					"margin": 0
				},
				"children": {
					"root": "a",
					"href": "/cart",
					"children": "Shopping cart"
				}
			},
			{
				"root": "table",
				"children": [
					{
						"root": "tr",
						"children": [
							{
								"root": "td",
								"style": {
									"textAlign": "right"
								},
								"children": {
									"root": "$val",
									"val": "items"
								}
							},
							{
								"root": "td",
								"children": "items"
							}
						]
					},
					{
						"root": "tr",
						"children": [
							{
								"root": "td",
								"style": {
									"textAlign": "right"
								},
								"children": [
									"$",
									{
										"root": "$val",
										"val": "total"
									}
								]
							},
							{
								"root": "td",
								"children": "total"
							}
						]
					}
				]
			},
			{
				"root": "a",
				"href": "/cart",
				"children": "Go to the cart"
			}
		]
	},
	"CategoryList": {
		"root": "ul",
		"children": {
			"root": "$for",
			"for": "i",
			"in": {
				"root": "$val",
				"val": "data"
			},
			"do": {
				"root": "CategoryListItem",
				"item": {
					"root": "$index",
					"index": {
						"root": "$val",
						"val": "i"
					},
					"in": {
						"root": "$val",
						"val": "data"
					}
				}
			}
		}
	},
	"CategoryListItem": {
		"root": "li",
		"children": [
			{
				"root": "a",
				"href": {
					"root": "$index",
					"index": "link",
					"in": {
						"root": "$val",
						"val": "item"
					}
				},
				"children": {
					"root": "$index",
					"index": "name",
					"in": {
						"root": "$val",
						"val": "item"
					}
				}
			},
			{
				"root": "$if",
				"if": {
					"root": "$index",
					"index": "children",
					"in": {
						"root": "$val",
						"val": "item"
					}
				},
				"then": {
					"root": "CategoryList",
					"data": {
						"root": "$index",
						"index": "children",
						"in": {
							"root": "$val",
							"val": "item"
						}
					}
				}
			}
		]
	},
	"ProductList": {
		"root": "div",
		"children": [
			{
				"root": "h2",
				"children": "Category 1"
			},
			{
				"root": "div",
				"style": {
					"display": "flex",
					"flexWrap": "wrap",
					"justifyContent": "space-around"
				},
				"children": {
					"root": "$for",
					"for": "i",
					"in": {
						"root": "$val",
						"val": "products"
					},
					"do": {
						"root": "ProductBox",
						"product": {
							"root": "$index",
							"index": {
								"root": "$val",
								"val": "i"
							},
							"in": {
								"root": "$val",
								"val": "products"
							}
						}
					}
				}
			}
		]
	},
	"ProductBox": {
		"root": "div",
		"style": {
			"width": 200,
			"float": "left",
			"border": "1px solid black",
			"height": 250,
			"margin": 5,
			"padding": 5,
			"textAlign": "center"
		},
		"children": [
			{
				"root": "h3",
				"style": {
					"margin": "0 0 10px 0"
				},
				"children": {
					"root": "a",
					"href": {
						"root": "$index",
						"index": "link",
						"in": {
							"root": "$val",
							"val": "product"
						}
					},
					"children": {
						"root": "$index",
						"index": "name",
						"in": {
							"root": "$val",
							"val": "product"
						}
					}
				}
			},
			{
				"root": "img",
				"src": {
					"root": "$index",
					"index": "image",
					"in": {
						"root": "$val",
						"val": "product"
					}
				},
				"alt": {
					"root": "$index",
					"index": "name",
					"in": {
						"root": "$val",
						"val": "product"
					}
				},
				"title": {
					"root": "$index",
					"index": "name",
					"in": {
						"root": "$val",
						"val": "product"
					}
				}
			},
			{
				"root": "div",
				"children": {
					"root": "a",
					"href": {
						"root": "$index",
						"index": "link",
						"in": {
							"root": "$val",
							"val": "product"
						}
					},
					"children": "Product detail"
				}
			},
			{
				"root": "AddToCartButton"
			}
		]
	},
	"AddToCartButton": {
		"root": "div",
		"style": {},
		"children": [
			{
				"root": "input",
				"size": 3,
				"defaultValue": "1",
				"style": {
					"textAlign": "right"
				}
			},
			{
				"root": "input",
				"type": "image",
				"title": "Add to cart",
				"alt": "Add to cart",
				"src": "http://wormik.net/cart-76-24.png"
			}
		]
	},
	"ProductDetail": {
		"root": "div",
		"children": [
			{
				"root": "div",
				"style": {
					"float": "right"
				},
				"children": [
					{
						"root": "img",
						"src": {
							"root": "$index",
							"index": "image",
							"in": {
								"root": "$val",
								"val": "product"
							}
						}
					},
					{
						"root": "AddToCartButton"
					}
				]
			},
			{
				"root": "h2",
				"children": {
					"root": "$index",
					"index": "name",
					"in": {
						"root": "$val",
						"val": "product"
					}
				}
			},
			{
				"root": "$for",
				"for": "i",
				"in": {
					"root": "$index",
					"index": "description",
					"in": {
						"root": "$val",
						"val": "product"
					}
				},
				"do": [
					{
						"root": "p",
						"children": {
							"root": "$index",
							"index": {
								"root": "$val",
								"val": "i"
							},
							"in": {
								"root": "$index",
								"index": "description",
								"in": {
									"root": "$val",
									"val": "product"
								}
							}
						}
					}
				]
			}
		]
